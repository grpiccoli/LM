@model CLM.Models.ViewModels.ClientSelectPartial

<div class="container">
    <form asp-action="SelectUser" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClienteId" class="control-label col-lg-4 col-md-6"></label>
            <div class="col-lg-6 col-md-6">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fas fa-user"></i></span>
                    <select title="Seleccione un cliente"
                            data-width="100%"
                            class="selectpicker form-control"
                            data-live-search="true"
                            data-size="5"
                            asp-for="ClienteId"
                            asp-items="Model.ClientesList"></select>
                </div>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>