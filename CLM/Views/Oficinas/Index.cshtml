@model IEnumerable<CLM.Models.Oficina>

@{
    ViewData["Title"] = "Oficinas";
}

<h2>Oficinas</h2>

<p>
    <a asp-action="Create">Añadir nueva sucursal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a class="btn btn-block btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit fa-fw"></i>Editar</a> 
                    <a class="btn btn-block btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye fa-fw"></i>Detalles</a> 
                    <a class="btn btn-block btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt fa-fw"></i>Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>